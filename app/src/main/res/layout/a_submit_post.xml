<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eTitlePost"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="53dp"
        android:hint="Title"
        android:layout_alignParentEnd="true"
        android:editable="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eCategoriesPost"
        android:layout_below="@+id/eTitlePost"
        android:layout_marginTop="20dp"
        android:layout_alignStart="@+id/eTitlePost"
        android:layout_alignParentStart="false"
        android:hint="Categories"
        android:layout_alignEnd="@+id/eTitlePost"
        android:editable="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:inputType="textMultiLine"
        android:ems="10"
        android:gravity="start"
        android:id="@+id/eContentPost"
        android:layout_centerVertical="true"
        android:layout_below="@+id/eCategoriesPost"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="100dp"
        android:layout_alignStart="@+id/eCategoriesPost"
        android:layout_alignEnd="@+id/eCategoriesPost"
        android:hint="Tell your personal problem here"
        android:editable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/bSubmitPost"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp" />

</RelativeLayout>
